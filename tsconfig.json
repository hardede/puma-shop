{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "strictNullChecks": false
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/components/Header/Header.jsx",
    "components/Header/Header.tsx",
    "components/Layout/Layout.jsx",
    "components/constants/social.js",
    "components/Footer/Footer.tsx",
    "components/Products/Products.d.tsx",
    "store/reducers/AddToCart.js",
    "components/Drawer/Drawer.hsx",
    "components/MultiRangeSlider/MultiRangeSlider.tsx",
    "components/screens/userAuthorization/UserAuthorization.tsx",
    "store/reducers/AuthSlice.ts",
    "pages/api/admin/orders.js",
    "pages/product/[slug].js",
    "pages/api/admin/products/index.js",
    "pages/api/admin/orders.js",
    "pages/api/auth/[...nextauth].js",
    "pages/api/allProducts/index.js",
    "pages/api/admin/summary.js",
    "pages/api/admin/products/index.js",
    "pages/api/auth/checkout.js",
    "pages/api/auth/signup.js",
    "pages/api/auth/update.js",
    "pages/api/orders/history.js",
    "pages/api/orders/index.js",
    "pages/api/admin/products/index.js",
    "models/Product.js"
  ],
  "exclude": ["node_modules"]
}
